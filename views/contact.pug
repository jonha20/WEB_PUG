html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/css/style.css")
        title Contact
    body
        include ./header.pug
        main
            h1 Contact Us
            form(action="/submit-contact", method="POST")
                label(for="name") Name:
                input#name(type="text", name="name", placeholder="Enter your name", required)
                label(for="email") Email:
                input#email(type="email", name="email", placeholder="Enter your email", required)
                label(for="message") Message:
                textarea#message(name="message", rows="5", placeholder="Write your message here", required)
                button(type="submit") Send Message
        include ./footer.pug